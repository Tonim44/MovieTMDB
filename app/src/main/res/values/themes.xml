<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="Theme.MovieTMDB" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <!-- Customize your theme here. -->
</style>
<style name="Theme.MovieTMDB.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>
    <style name="Theme.MovieTMDB.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MovieTMDB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tema aplikasi (parent dari tema turunan yang digunakan dalam aktivitas) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Konfigurasi lain untuk tema aplikasi -->
    </style>

    <!-- Tema khusus untuk MainActivity, diturunkan dari AppTheme -->
    <style name="MainActivityTheme" parent="AppTheme">
        <!-- Konfigurasi khusus untuk MainActivity jika diperlukan -->
    </style>

    <style name="IconCard">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">7dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="IconCard1">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
        <item name="cardElevation">7dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="IconCard2">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/colorUnreadNews</item>
        <item name="cardElevation">7dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Rectanggle">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
        <item name="cardElevation">7dp</item>
    </style>

    <style name="Rectanggle1">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>